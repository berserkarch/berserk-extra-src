# Maintainer: Gaurav Raj (@thehackersbrain) <me@thehackersbrain.xyz>

pkgname=berserk-conky
pkgver=0.1.0
pkgrel=2
pkgdesc="Conky config for Berserk Arch Specific"
arch=('any')
url="https://gitlab.com/berserkarch/berserk-packages/berserk-extra-src/-/tree/main/berserk-conky"
license=('MIT')
depends=('conky' 'net-tools')
source=()
sha256sum=()

berserkconfig="usr/share/berserkarch"

package() {
    install -dDm 755 "${pkgdir}/${berserkconfig}/"
    cp -r "${startdir}/conky/" "${pkgdir}/${berserkconfig}/"
    cp -r "${startdir}/conky/fonts/" "${pkgdir}/usr/share/"
    install -Dm644 "${startdir}/conky/berserk-conky.desktop" "${pkgdir}/etc/xdg/autostart/berserk-conky.desktop"
}
