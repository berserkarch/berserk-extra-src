# Maintainer: Gaurav Raj (@thehackersbrain) <me@thehackersbrain.xyz>

pkgname=berserk-config-gnome
pkgver=0.1.0
pkgrel=4
pkgdesc="GNOME configurations for Berserk Arch"
arch=('any')
license=('GPL')
depends=('gnome-shell' 'dconf' 'glib2')
install=$pkgname.install
source=('berserkarch.xml')
sha256sums=('SKIP')

targetdir="usr/share/glib-2.0/schemas"

package() {
  mkdir -p "${pkgdir}/${targetdir}/"
  # install -Dm755 "${srcdir}/99_berserkarch-gnome.gschema.override" "${pkgdir}/usr/share/glib-2.0/schemas/99_berserkarch-gnome.gschema.override"
  install -Dm644 "${srcdir}/berserkarch.xml" "${pkgdir}/usr/share/gnome-background-properties/berserkarch.xml"
  install -Dm755 "${startdir}/files/10_gnome-shell.gschema.override" "${pkgdir}/${targetdir}/10_gnome-shell.gschema.override"
  install -Dm755 "${startdir}/files/10_gnome-terminal.gschema.override" "${pkgdir}/${targetdir}/10_gnome-terminal.gschema.override"
  install -Dm755 "${startdir}/files/10_desktop-base.gschema.override" "${pkgdir}/${targetdir}/10_desktop-base.gschema.override"
  install -Dm755 "${startdir}/files/10_mutter-common.gschema.override" "${pkgdir}/${targetdir}/10_mutter-common.gschema.override"
  install -Dm755 "${startdir}/files/20_berserk-defaults-desktop.gschema.override" "${pkgdir}/${targetdir}/20_berserk-defaults-desktop.gschema.override"
  install -Dm755 "${startdir}/files/10_gnome-tweaks.gschema.override" "${pkgdir}/${targetdir}/10_gnome-tweaks.gschema.override"
  install -Dm755 "${startdir}/files/10_gsettings-desktop-schemas.gschema.override" "${pkgdir}/${targetdir}/10_gsettings-desktop-schemas.gschema.override"
  install -Dm755 "${startdir}/files/21_kali-themes.gschema.override" "${pkgdir}/${targetdir}/21_kali-themes.gschema.override"
  # cp -r "${startdir}/files/" "${pkgdir}/${targetdir}/"
}
