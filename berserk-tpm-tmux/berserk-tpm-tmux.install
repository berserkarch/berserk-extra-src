username="$(ls /home | head -n1 | tr -d '\n')"

post_install() {
  echo -e "Installing in /home/${username} for now..."
  git clone https://github.com/tmux-plugins/tpm /home/${username}/.tmux/plugins/tpm
  chown -R ${username}:${username} /home/${username}/.tmux
}

post_upgrade() {
  post_install
}
